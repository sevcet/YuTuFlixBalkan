<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!-- BACKGROUND POSTER (blur/dim) -->
    <ImageView
        android:id="@+id/detailFilmBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.35"
        android:src="@drawable/placeholder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_dark" />

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp">

        <!-- POSTER -->
        <ImageView
            android:id="@+id/detailFilmImage"
            android:layout_width="360dp"
            android:layout_height="230dp"
            android:layout_marginRight="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

        <!-- TEXT AREA -->
        <LinearLayout
            android:layout_width="456dp"
            android:layout_height="437dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- TITLE -->
            <TextView
                android:id="@+id/detailFilmTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Movie Title"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold" />

            <!-- YEAR -->
            <TextView
                android:id="@+id/detailFilmYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="2024"
                android:textColor="#DDDDDD"
                android:textSize="18sp" />

            <!-- GENRE -->
            <TextView
                android:id="@+id/detailFilmGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Action"
                android:textColor="#DDDDDD"
                android:textSize="18sp" />

            <!-- DESCRIPTION -->
            <TextView
                android:id="@+id/detailFilmDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="8"
                android:text="Opis filma..."
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- BUTTONS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- PLAY BUTTON (Netflix style) -->
                <Button
                    android:id="@+id/playFilmButton"
                    android:layout_width="220dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/netflix_play_button"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="â–¶ Play"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- FAVORITE BUTTON -->
                <ImageButton
                    android:id="@+id/favoriteIconFilm"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:background="@drawable/tv_button_background"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_favorite_border" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
